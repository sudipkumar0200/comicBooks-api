generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ComicBook {
  id          String      @id @default(uuid())
  name        String
  author      String
  year        Int
  price       Float
  discount    Float?
  pages       Int
  condition   Condition @default(NEW) 
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
enum Condition {
  USED
  NEW
}